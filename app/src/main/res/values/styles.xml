<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blackButtonStyle">
        <item name="android:background">@drawable/black_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="color">@color/edt_color</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
    </style>

    <style name="DialogStyle" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="itemIconTint">@drawable/bottom_nav_item_background</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/disable_button</item>
    </style>

    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayout_selected_text" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <dimen name="h4TextSize">30sp</dimen>
    <dimen name="h2TextSize">18sp</dimen>
    <dimen name="h3TextSize">24sp</dimen>


</resources>