<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/nunitosans_regular</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blackButtonStyle">
        <item name="android:background">@drawable/black_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="color">@color/edt_color</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/nunitosans_regular</item>
    </style>


    <dimen name="h4TextSize">30sp</dimen>
    <dimen name="h2TextSize">18sp</dimen>
    <dimen name="h3TextSize">24sp</dimen>


</resources>