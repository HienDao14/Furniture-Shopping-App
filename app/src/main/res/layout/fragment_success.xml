<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.shopping.SuccessFragment">

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/success"
        style="@style/h4"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/img_success"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ic_tick"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/green_tick"
        app:layout_constraintTop_toBottomOf="@id/iv_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_congrat"
        android:text="@string/congrat"
        style="@style/h2"
        android:textSize="20sp"
        android:textColor="@color/primary"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ic_tick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_back"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/back_to_home"
        android:textAllCaps="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/blackButtonStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>